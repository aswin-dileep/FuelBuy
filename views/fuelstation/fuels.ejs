<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Drivers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/fuelstation/drivers.css">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</head>
<body>

    <!-- Sidebar -->
    <%- include('sidebar.ejs') %>

    <!-- Main Content -->
    <main class="main-content">
        <div class="dashboard-card">
            <div class="header-section">
                <h2 class="card-title"><ion-icon name="water"></ion-icon> Fuels List</h2>
                <a href="/fuelstation/add_fuel" class="btn-register">
                    <ion-icon name="add"></ion-icon>Add Fuels
                </a>
            </div>

            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% fuels.forEach((fuel)=>{ %>
                        <tr>
                        <td><%= fuel.type %></td>
                        <td><%= fuel.quantity %></td>
                        <td><%= fuel.price %>/-</td>
                        
                        <td class="action-buttons">
                            <a href="/fuelstation/drivers/<%= fuel._id %>/edit" class="btn-edit">Update Stock & Price</a>
                            <form action="/fuelstation/drivers/<%= fuel._id %>/delete" method="POST">
                                <button class="btn-delete" type="submit">Delete</button>
                            </form>                      
                        </td>

                        </tr>
                  <%  }) %>
                </tbody>
            </table>
        </div>
    </main>

</body>
</html>
