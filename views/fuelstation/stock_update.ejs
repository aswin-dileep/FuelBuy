<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fuel Stock & Price Update</title>
    <link rel="stylesheet" href="/css/fuelstation/stock_update.css">
</head>
<body>

    <!-- Sidebar -->
    <%- include('sidebar.ejs') %>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <h2 class="title">Fuel Stock & Price Update</h2>

            <!-- Form Wrap -->
            <form action="/fuelstation/update_stock" method="POST" class="update-form">
                <input type="hidden" name="fuelId" value="<%= fuel._id %>">
                
                <!-- Fuel Stock & Price Section -->
                <div class="update-grid">
                    <!-- Fuel Stock Card -->
                    <div class="stock-card">
                        <h3>Fuel Stock</h3>
                        <div class="progress-circle">
                            <span class="stock-value" id="stockValue"><%= fuel.quantity %></span> Liters
                        </div>

                        <div class="update-section">
                            <label for="newStock">Update Fuel Stock:</label>
                            <input type="number" id="newStock" placeholder="Enter new stock" 
                                   name="quantity" value="<%= fuel.quantity %>" min="1">
                        </div>
                    </div>

                    <!-- Fuel Price Card -->
                    <div class="stock-card">
                        <h3>Fuel Price</h3>
                        <div class="progress-circle">
                            <span class="stock-value" id="priceValue">&#8377;<%= fuel.price %></span> /L
                        </div>

                        <div class="update-section">
                            <label for="newPrice">Update Fuel Price:</label>
                            <input type="number" id="newPrice" placeholder="Enter new price" 
                                   name="price" value="<%= fuel.price %>" step="0.01">
                        </div>
                    </div>
                </div>

                <!-- Update Button -->
                <input type="submit" value="Update Stock & Price" class="update-btn">
            </form>
        </div>
    </div>

</body>
</html>