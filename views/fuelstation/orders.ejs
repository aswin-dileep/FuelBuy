<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link rel="stylesheet" href="/css/fuelstation/orders.css">
</head>
<body>

    <!-- Sidebar -->
    <%- include('sidebar.ejs') %>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <h2>My Orders</h2>
            
            <% if (orders.length > 0) { %>
                <table id="ordersTable">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Quantity (Liters)</th>                            
                            <th>Status</th>
                            <th>Distance (km)</th>
                            <th>Assign</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.userId.name %></td>
                                <td><%= order.quantity %></td>
                                <td><%= order.status || "Pending" %></td>
                                <td><%= order.distance %> km</td>
                                <td>
                                    <button class="assign-btn" data-order-id="<%= order._id %>">Assign Order</button>
                                </td>
                                <td>
                                    <a href="/fuelstation/order-details/<%= order._id %>" class="btn-view">View</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="pagination">
                    <button id="prevPage">Previous</button>
                    <span id="pageNumber">1</span>
                    <button id="nextPage">Next</button>
                </div>

            <% } else { %>
                <p>No orders found.</p>
            <% } %>
        </div>
    </div>

    <!-- Assign Order Modal (Moved outside of the table) -->
    <div id="assignModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Select Driver</h3>
            <select id="driverSelect">
                <!-- Options will be populated dynamically -->
            </select>
            <button id="confirmAssign">Assign</button>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/assignOrder.js"></script>
    <script src="/js/pagination.js"></script>

</body>
</html>
