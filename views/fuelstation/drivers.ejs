<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Drivers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/fuelstation/drivers.css">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</head>
<body>

    <!-- Sidebar -->
    <%- include('sidebar.ejs') %>

    <!-- Main Content -->
    <main class="main-content">
        <div class="dashboard-card">
            <div class="header-section">
                <h2 class="card-title"><ion-icon name="people"></ion-icon> Drivers List</h2>
                <a href="/fuelstation/driver_reg" class="btn-register">
                    <ion-icon name="person-add"></ion-icon> Register Driver
                </a>
            </div>

            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Licence No</th>
                        <th>Aadhar No</th>
                        <th>Phone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% drivers.forEach((driver) =>{ %>
                        <tr>
                            <td><%= driver.userId.name %></td>
                            <td><%= driver.userId.email %></td>
                            <td><%= driver.licenceNo %></td>
                            <td><%= driver.aadharNo %></td>
                            <td><%= driver.userId.phone %></td>

                            <td class="action-buttons">
                                <a href="/fuelstation/drivers/<%= driver._id %>/edit" class="btn-edit">Edit</a>
                                <form action="/fuelstation/drivers/<%= driver._id %>/delete" method="POST">
                                    <button class="btn-delete" type="submit">Delete</button>
                                </form>                      
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

</body>
</html>
