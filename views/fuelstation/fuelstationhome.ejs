<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/fuelstation/fuelstationhomepage.css">
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <span class="fuel">Fuel Station</span>
            <p>Dashboard</p>
        </div>
        
        <ul class="nav-links">
            <li><a href="/fuelstation" class="active"><ion-icon name="home"></ion-icon> Home</a></li>
            <li><a href="/fuelstation/drivers"><ion-icon name="people"></ion-icon> Drivers</a></li>
            <li><a href="/fuelstation/fuels"><ion-icon name="water"></ion-icon> Fuels</a></li>
            <li><a href="/fuelstation/orders"><ion-icon name="document-text"></ion-icon> Orders</a></li>
            <li><a href="/fuelstation/vehicles"><ion-icon name="car"></ion-icon> Vehicles</a></li>
            <li><a href="/fuelstation/feedbacks"><ion-icon name="star"></ion-icon> Feedbacks</a></li> <!-- âœ… New Feedback Section -->
        </ul>
        
        <div class="logout-section">
            <a href="/" class="btn-danger"><ion-icon name="log-out"></ion-icon> Logout</a>
        </div>
    </nav>
    
    <!-- Main Content -->
    <main class="main-content">
        <!-- Dashboard Cards -->
        <div class="dashboard-cards">
            <div class="card">
                <h3>Total Orders</h3>
                <p>1,234</p>
                <ion-icon name="cart" class="card-icon"></ion-icon>
            </div>
            <div class="card">
                <h3>Available Stock</h3>
                <p><%= availableStock %> L</p>
                <ion-icon name="water" class="card-icon"></ion-icon>
            </div>
            <div class="card">
                <h3>Available Drivers</h3>
                <p><%= availableDrivers %></p>
                <ion-icon name="car" class="card-icon"></ion-icon>
            </div>
        </div>

        <!-- Recent Orders Table -->
        <div class="recent-orders">
            <h2>Recent Orders</h2>
            <table>
                <!-- Table content here -->
            </table>
        </div>
    </main>

    <!-- Icons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
</body>
</html>
