<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Users</title>
    <link rel="stylesheet" href="/css/Admin/users.css">
</head>
<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar">
            <div class="logo">
                <span class="fuel">Admin Panel</span>
                <p>Doorstep Fuel Delivery</p>
            </div>
            <ul class="nav-links">
                <li><a href="/admin" class="active">Home</a></li>
                <li><a href="/admin/fuel_reg">Add Fuel Stations</a></li>              
                <li><a href="/admin/fuelstations">Fuel Stations</a></li>
                <li><a href="/admin/users">Users</a></li>
                <li ><a href="/" class="btn-danger">Logout</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <h2>Users List</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% user.forEach((user) =>{ %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <button class="btn-edit"> <a href="/admin/users/<%= user._id %>" style="text-decoration: none; color: aliceblue;"> Edit </a> </button>
                            <form action="/admin/users/<%= user._id %>/delete" method="POST" style="display:inline;">
                                <button class="btn-delete" type="submit">Delete</button>
                            </form>                      
                        </td>
                    </tr>
               <% }) %>
                
                
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 FuelBuddy. All rights reserved.</p>
    </footer>

</body>
</html>
